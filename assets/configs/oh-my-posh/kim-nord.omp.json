{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "console_title_template": "{{.Shell}} in {{.PWD}}",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "foreground": "#EBCB8B",
          "properties": {
            "time_format": "15:04:05"
          },
          "style": "plain",
          "template": "\n[{{ .CurrentDate | date .Format }}]",
          "type": "time"
        },
        {
          "foreground": "#B48EAD",
          "style": "plain",
          "template": " \uf0e7 ",
          "type": "root"
        },
        {
          "foreground": "#81A1C1",
          "properties": {
            "style": "agnoster"
          },
          "style": "plain",
          "template": " {{ .Path }} ",
          "type": "path"
        },
        {
          "foreground": "#EBCB8B",
          "properties": {
            "branch_gone_icon": "\u274e",
            "branch_identical_icon": "\uf14a"
          },
          "style": "plain",
          "template": " {{ .HEAD }} ",
          "type": "git"
        },
        {
          "foreground": "#BF616A",
          "style": "plain",
          "template": "x{{ .Meaning }} ",
          "type": "exit"
        },
        {
          "foreground": "#D08770",
          "style": "plain",
          "template": "\u276f ",
          "type": "text"
        }
      ],
      "type": "prompt",
      "transient_prompt": {
        "background": "transparent",
        "foreground": "#FFFFFF",
        "template": "{{ .Shell }}> "
      }
    },
    {
      "alignment": "right",
      "segments": [
        {
          "type": "shell",
          "style": "plain",
          "foreground": "#D08770",
          "properties": {
            "mapped_shell_names": {
              "pwsh": "Shell",
              "powershell": "Shell",
              "cmd": "Cmd",
              "bash": "Bash",
              "zsh": "Zsh"
            }
          },
          "template": " \ue795 {{ .Name }}"
        }
      ],
      "type": "rprompt",
      "transient_prompt": {
        "background": "transparent",
        "foreground": "#ffffff",
        "template": "{{ .Shell }}> "
      }
    }
  ],
  "version": 3
}
